<div class="row">

      <div class="span4">
          <div class="logo" id="logo2">
                <a href="<%= root_path %>"><img src="/assets/VoiceGems-logo-bare2.png" alt="" style="width:350px" /></a>   
           </div>
      </div>

     <div class="span8">  

         <div class="navbar">
           <div class="navbar-inner">
          <nav>
            <ul class="nav pull-right">

              <li><%= link_to "Home", root_path %></li>

              <% if !signed_in? %>     
              <li><%= link_to "Reset Password", new_password_reset_path %></li>    
              <li><%= link_to "Login", login_path %></li>

              <% end %>

               <% if signed_in? %>
                <li><%= link_to "Profile", current_user %></li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    Account <b class="caret"></b>
                  </a>
                   <ul class="dropdown-menu">
                    <li><%= link_to account_user_path(current_user) do %><i class="icon-pencil"></i> Change Password<% end%> </li>
                    <li><%= link_to edit_user_path(current_user) do %><i class="icon-pencil"></i> Edit User Name/Email<% end %></li>
                    <li class="divider"></li>

                    <% if !customer_has_active_subscription? %>
                       <% if wed_event_user? %>
                           <li><%= link_to purchase_sub_existing_path do %><i class="icon-shopping-cart"></i> Purchase Subscription<% end %></li>
                        <% else %>
                            <li><%= link_to purchase_sub_existing_edu_path do %><i class="icon-shopping-cart"></i> Purchase Subscription<% end %></li> 
                        <% end %>
                    <% end %> 
                    <% if customer_has_active_subscription? %>
                    <li><%= link_to cancel_path do %><i class="icon-ban-circle"></i> Cancel Subscription<% end %></li><% end %> 
                    <li class="divider"></li>
                    <li> <%= link_to signout_path, method: "delete" do %><i class="icon-signout"></i> Sign out<% end %></li>
                  </ul>
                 </li>
                 <% if is_haltom_user %>  <li> <%= link_to signout_path, method: "delete" do %><i class="icon-signout"></i> SIGN OUT <% end %></li> <% end %>
               <% end %>

             </ul>
           </nav>
         </div>
       </div>

    </div>

 </div>