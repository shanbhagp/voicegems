<script>
$(function() {
  $('#event_date').datepicker({ dateFormat: 'yy-mm-dd' });
});
</script>



<br/>

<div class="row"> <%# wrap tabs%>

 <ul id="myTab" class="nav nav-tabs">
	  <li class="active"><a href="#ev" data-toggle="tab"><strong>Your Events</strong></a></li>
	  <li><a href="#nw" data-toggle="tab"><strong>Your VoiceGem<% if !current_user.voicegems.nil? && current_user.voicegems.count > 1 %>s<% end %></strong></a></li>
</ul>
          
<div id="myTabContent" class="tab-content">
     <div class="tab-pane active" id="ev">

     		
	    	 					 <div class="row">
				 		 			        
				         <div class="span12">
				             <div class="well">
				                 <h4><i class="icon-edit icon-blue"></i>&nbsp;Create an event page: </h4> </br>

				                     <%= form_for(Event.new, :html => {:class => "form-inline"}) do |f| %>
				                      
				                     	
				                        <%= f.text_field :title, :placeholder => 'Title (required)', :class => "span3" %> &nbsp;&nbsp;
				                         
				                            
				                        <%= f.text_field :date, :placeholder => 'Date (required)', :class => "span2" %> &nbsp;&nbsp;

				                                        	      
						        				  <% if user_is_trialing? && purch_pages_left? %>

						                          		<%= f.select :purchase_type,  options_for_select([   ["from purchased pages (#{current_user.purchased_events} left)", "p"], ["Don't use a purchased page (free trial mode)", "t"]  ]), :size => 5 %>
						                          		<%= f.submit "Create Event Page", class: "btn btn-primary" %>

						                          <% elsif user_is_trialing? %>

						                          		<%= f.hidden_field :purchase_type, :value => 't' %>
						                          		<%= f.submit "Create Event Page", class: "btn btn-primary" %>&nbsp;&nbsp;<span class="help-block">(Free Trial Mode - Event Page freezes in 30 days)</span>

						                          <% elsif purch_pages_left? %>
						                          		
						                          		<%= f.hidden_field :purchase_type, :value => 'p' %>
						                          		<%= f.submit "Create Event Page", class: "btn btn-primary" %>&nbsp;&nbsp;<span class="help-block">(<%= current_user.purchased_events %> pages remaining)</span>
						                          
						                          <% else %>
						                          		<%= f.submit "Create Event Page", class: "btn btn-primary", disabled: true %>&nbsp;&nbsp;<span class="help-block">(Free Trial Ended)</span>&nbsp;&nbsp; <a href="<%= existing_user_purchase_path %>" class="btn btn-info btn-large">Buy Event Pages&nbsp;&nbsp;<i class="icon-chevron-right"></i><i class="icon-chevron-right"></i><i class="icon-chevron-right"></i></a>
						                          <% end %>

						                          

						                         

				                 		

						                 


				                        <br/>
				                        <span class="help-block">(e.g., "The Jones-Ravenwood Wedding")</span>

				                     <% end %>
				                
				             </div> <%# end well %>
				         </div> <%# end span12 %>
				        
				         

	              </div> <%# end row %>

	  

				<hr/>

				 <div class="row">
				    <div class="span12">
				      <div class="well">

				            <h4><i class="icon-list icon-blue"></i></span>&nbsp;<strong>Event pages you administer: </strong></h4>
				            <br/>
				            <% if @user.adminevents.count == 0 %> 
				            (no event pages created yet)
				            <% else %> 
						            <table class="table table-striped event">
						              <% @user.adminevents.each do |e| %>
						                <tr>  
						                  <td><strong><%= link_to e.title, e %></strong> </td>
						                  <td> <% unless e.date.nil? %><%= e.date.strftime("%b %d, %Y") %><% end %> </td> 
						                  <td><a  href="<%= edit_event_path(e) %>"><span class="label label-info"><i class="icon-pencil icon-white"></i>&nbsp;edit event</span></a>	 </td> 
						                   <td> 
				                  			 <div id="<%= e.id %>" class="modal hide" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                                          <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                            <h3>Admins<% if e.title %> for <%= e.title %><% end %></h3>
                                                          </div>
                                                          <div class="modal-body">

                                                                <br/>
                                                                  <table class="table table-condensed table-striped">
                                                                    <thead>
                                                                      <th>First Name</th>
                                                                      <th>Last Name</th>
                                                                      <th>Email</th>                                                                      
                                                                    </thead>
                                                                    <tbody>
                                                                    <% e.admins.each do |a| %>
                                                                      <tr>
                                                                        <td> <%= a.first_name %> </td>
                                                                        <td> <%= a.last_name %> </td>
                                                                        <td> <%= a.email %> </td>
                                                                      </tr>
                                                                    <% end %>
                                                                  </tbody> 
                                                                  </table> 
                                                               
                                                          </div>

                                                          <div class="modal-footer">
                                                            <button class="btn" data-dismiss="modal">Close</button>
                                                              
                                                      
                                                            </div>
                                                        </div>

                                                          
                                                           
                                                              <a data-toggle="modal" href="#<%= e.id %>" class="btn btn-info btn-small">See All Event Admins</a>
                                                         
                                                         
                                                </td>
                                          <% if page_is_active(e) %>
						                 	 <td> <a href="<%= events_path%>/<%= e.id %>" class="btn btn-info btn-small">go <i class="icon-chevron-right icon-white"></i> </a>
						                 	 </td>
						                  <% else %>
						                  		<% if current_user.purchased_events > 0 %>
									                  		<td> <%= form_for(:act, url: activate_path) do |y| %>
													                <%= y.hidden_field :event_id, :value => e.id %>
													                <%= y.submit "Activate", class: "btn-primary", confirm: 'Are you sure you want to activate using a purchased Event Page?' %><br/>(<%= current_user.purchased_events %> purchased Event Pages left) <% end %>						                
													        </td>
										        <% else %>
										        		<a href="<%= existing_user_purchase_path %>" class="btn btn-info btn-small">Buy Event Pages</a>
										        <% end %>
						                  <% end %>
						                  

						                </tr>
						              <% end %>
						            </table> 
						    <% end %> 
				      </div>
				    </div>

				  </div>   			               
				      </div>

	
      <div class="tab-pane" id="nw">
		 <%= render 'users/vgregularshow' %> 	               
     </div>

</div>

</div><%# end wrap tabs %>
  



												          


										        
												    
