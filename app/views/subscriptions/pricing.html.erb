 <div class="container">

       <!--SILVER-->
        <div class="fltlft PlanBoxGold">
          <div class="PlanBoxHeading"><%= @first_plan.name.upcase%> PLAN</div>
          <div class="PlanBoxContent">
            <ul>
              <li><strong>$<%= @first_plan.monthly_cost_cents / 100 %> Monthly</strong></li>
              <li><%= @first_plan.events_number%> Events / Year</li>
              <li>Unlimited Name Recordings </li>
              <li>Free 14 Day Trial</li>
              <li>
                <p class="PlanBoxSignUp"><%= form_for(:snc, url: newcustomer_path) do |y| %>
                <%= y.hidden_field :plan, :value => @first_plan.my_plan_id %>
                  <%= y.submit "Start Free Trial!", class: "btn-primary btn-large" %>
                <% end %>  </p>
              </li>
            </ul>
          </div>
        </div>

